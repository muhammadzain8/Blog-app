    <!-- POSTS -->
    <% if (post) { %>

    <section id="postsSection" class="mt-2">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12 px-0">
            <div class="card bg-primary text-">
              <div
                class="card-header text-white d-flex justify-content-between"
              >
                <h4>
                  <i class="fa fa-user"></i> Posted By :- <% if
                  (post.user.name=== userName) { %> You
                  <p id="email"><%=user.email %></p>
                  <% } else { %>
                  <p id="email"><%=user.email %></p>
                  <% } %>
                </h4>

                <% if(post.user.name=== userName) { %>

                <div>
                  <button
                    class="btn-danger btn"
                    style="height: fit-content;"
                    id="delPost"
                  >
                    Delete Post <i class="fas fa-trash"></i>
                  </button>
                  <button
                    class="btn-primary btn"
                    style="height: fit-content;"
                    id="editPost"
                    data-toggle="modal"
                    data-target="#editPostModal"
                  >
                    Edit Post <i class="fas fa-edit"></i>
                  </button>
                </div>
                <% } %>
              </div>
              <div class="card-body">
                <h4 class="card-title text-light" id="postTitle">
                  <%= post.title %>
                </h4>
                <p class="card-text pl-4" style="color: rgb(255, 255, 255);">
                  <%= post.body %>
                </p>
              </div>
              <div
                class="card-footer text-white-50 d-flex justify-content-start align-content-center"
              >
                <a href="" class="btn btn-success m-2" id="like">
                  <% if (like === false) { %> Like
                  <i class="fa fa-thumbs-up pl-2"></i>
                  <% } else { %> UnLike
                  <i class="fa fa-thumbs-down pl-2"></i>

                  <% } %>
                </a>
                <button
                  href=""
                  class="btn btn-warning m-2 text-dark"
                  id="comment"
                  data-toggle="modal"
                  data-target="#commentModal"
                >
                  Comment
                  <i class="fas fa-comment pl-2"></i>
                </button>

                <p class="ml-auto align-self-end px-2" id="numLikes">
                  <%= likes %> Likes |
                </p>

                <p class="align-self-end px-2" id="numComments">
                  <%= post.comments.length %> Comments |
                </p>
                <p class="align-self-end">
                  Last Updated <%= post.getFormattedDate() %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <% if (post.comments.length>0) { %>

    <section id="comments" class="pt-3" style="background: #ffd52e;">
      <div class="container-fluid" id="commentsSec">
        <h4>
          Comments
        </h4>

        <% for (let i = 0; i < post.comments.length; i++) { %>
        <div class="row my-0 py-0" id="<%= post.comments[i]._id %>">
          <div class="col-md-8 py-3">
            <div class="card" style="background: #2effab;">
              <div class="card-header">
                <i class="fas fa-user"></i> <%= post.comments[i].user.name %>
              </div>
              <div class="card-body">
                <p class="card-text"><%= post.comments[i].body %></p>
              </div>
              <div
                class="card-footer text-muted d-flex justify-content-between align-items-start"
              >
                <div>
                  <%= post.comments[i].getFormattedDate() %>
                </div>

                <% if(post.comments[i].user.email === user.email) { %>
                <div
                  class="d-flex flex-wrap align-items-center justify-content-between"
                  style="flex-basis: 55%;"
                >
                  <button
                    class="btn-danger btn btn-sm delComment"
                    style="height: fit-content;"
                  >
                    Delete Comment <i class="fas fa-trash"></i>
                    <span class="sr-only">
                      <%= post.comments[i]._id %>
                    </span>
                  </button>

                  <button
                    class="btn-primary btn editComment"
                    style="height: fit-content;"
                    id="editCommentBtn"
                    data-toggle="modal"
                    commentId="<%=post.comments[i] %>"
                    data-target="#commentEditModal"
                  >
                    Edit Comment <i class="fas fa-edit"></i>
                    <span class="sr-only">
                      <%= post.comments[i]._id %>
                    </span>
                  </button>
                </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </section>
    <% } else { %>
    <section id="comments" class="pt-3" style="background: #ffd52e;">
      <div class="container-fluid sr-only" id="commentsSec">
        <h4>
          Comments
        </h4>
      </div>
    </section>
    <%} } %>

    <div
      class="modal fade"
      id="commentModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="modelTitleId"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Comment</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="w-100" style="height: 150px;">
              <textarea
                name="textarea"
                id="commentBody"
                class="form-control w-100 h-100"
              ></textarea>
              <span class="invalid-feedback">
                Comment must NOT be Empty !
              </span>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" id="commentBtn" class="btn btn-primary">
              Comment
            </button>
          </div>
        </div>
      </div>
    </div>
    <div
      class="modal fade"
      id="commentEditModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="modelTitleId"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Comment</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="w-100" style="height: 150px;">
              <textarea
                name="textarea"
                class="form-control w-100 h-100 commentEditBody"
              ></textarea>
              <span class="invalid-feedback">
                Comment must NOT be Empty !
              </span>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="commentEditBtn"
              class="btn btn-primary"
            >
              Update Comment
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="editPostModal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header bg-primary text-white">
            <h5 class="modal-title">Edit Post</h5>
            <button class="close" data-dismiss="modal">
              <span>&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="title">Title</label>
                <input
                  type="text"
                  value="<%= post.title %>"
                  class="form-control"
                  id="postEditTitle"
                />
                <span class="invalid-feedback">
                  A Post must contain a title !
                </span>
              </div>
              <!-- <div class="form-group">
                <label for="image">Upload Image</label>
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="image" />
                  <label for="image" class="custom-file-label"
                    >Choose File</label
                  >
                </div>
                <small class="form-text text-muted">Max Size 3mb</small>
              </div> -->
              <div class="form-group">
                <label for="body">Body</label>
                <textarea name="editor1" class="form-control" id="postEditBody">
                  <%= post.body %>
                </textarea>
                <span class="invalid-feedback">
                  A Post must contain a Body !
                </span>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button class="btn btn-primary" data-dismiss="" id="updatePost">
              Save Changes
            </button>
          </div>
        </div>
      </div>
    </div>

